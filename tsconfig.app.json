{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Compiler Options */
    "baseUrl": ".",
    "paths": {
      "@atoms": ["src/components/atoms/index.ts"],
      "@atoms/*": ["src/components/atoms/*"],
      "@molecules": ["src/components/molecules/index.ts"],
      "@molecules/*": ["src/components/molecules/*"],
      "@organisms": ["src/components/organisms/index.ts"],
      "@organisms/*": ["src/components/organisms/*"],
      "@templates": ["src/components/templates/index.ts"],
      "@templates/*": ["src/components/templates/*"],
      "@pages": ["src/components/pages/index.ts"],
      "@pages/*": ["src/components/pages/*"],
      "@hooks": ["src/hooks/index.ts"],
      "@hooks/*": ["src/hooks/*"],
      "@routes": ["src/routes/index.ts"],
      "@routes/*": ["src/routes/*"],
      "@services": ["src/services/index.ts"],
      "@store": ["src/store/index.ts"],
      "@slices": ["src/store/slices/index.ts"],
    }
  },
  "include": ["src"]
}
